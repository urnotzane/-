.scalein {
  animation: 0.5s scalein backwards;
}

@keyframes scalein {
  0% {
    opacity: 0;
    transform: scale(1.3);
  }

  100% {
    opacity: 1;
    transform: scale(1);
  }

  0% {
    opacity: 0;
    transform: scale(1.3);
  }
}

@keyframes scaleout {
  100% {
    opacity: 0;
    transform: scale(1.3);
  }

  0% {
    opacity: 1;
    transform: scale(1);
  }
}
