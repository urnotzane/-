.zc_modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  transform: scale(1.3);
  opacity: 0;
  transition: all 0.3s;
  -webkit-transition: all 0.3s;
}

.mask {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1001;
}

.modal_wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 1002;
  transform: translate(-50%, -50%);
  background-color: #fff;
  width: 500rpx;
  max-height: 60vh;
  border-radius: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.show{
  opacity: 1;
  transform:  scale(1);
  z-index: 1000;
}
.modal_wrapper .header{
  font-size: 32rpx;
  padding: 0 70rpx;
  border-bottom: 1rpx #ddd solid;
}
.modal_wrapper .header, .modal_wrapper .footer {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  box-sizing: border-box;
  position: relative;
}

.modal_wrapper .header .zicon_close {
  position: absolute;
  top: 0;
  right: 20rpx;
  font-size: 24rpx;
  color: #f30;
  width: 50rpx;
}

.modal_wrapper .content .text {
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  min-height: 150rpx;
  display: flex;
  align-items: center;
}

.modal_wrapper .footer{
  display: flex;
  border-top: 1rpx solid #ddd;
  height: 90rpx;
  line-height: 90rpx;
}

.modal_wrapper .footer > view{
  flex: 1;
}

.modal_wrapper .footer .sure{
  color: #409eff;
}
