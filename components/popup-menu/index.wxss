@import '../../app.wxss';

.popup-menu {
  position: fixed;
  bottom: 40px;
  right: 40px;
  z-index: 1001;
  background-color: #fff;
  color: #555;
  padding: 5px 0;
  transform-origin: right bottom;
}

@keyframes popleft {
  0%{transform: scale(0);}
	100%{ transform: scale(1);}
}

@keyframes popright {
  0%{transform: scale(1);}
	100%{ transform: scale(0);}
}

.menu-btn{
  width: 50px;
  height: 50px;
  z-index: 1002;
  box-sizing: border-box;
  font-size: 12px;
  background-color: #33d1bf;
  color: #fff;
  border-radius: 50%;
  padding: 0;
  line-height: 50px;
  position: fixed;
  bottom: 15px;
  right: 15px;
  text-align: center;
}

.menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.1);
}

.popup-menu icon {
  display: inline;
  padding-right: 10px;
}

.popup-menu .iconfont {
  font-size: 14px;
}

.popup-menu .popup-menu-header {
  position: relative;
  z-index: 1001;
  line-height: 28px;
  padding: 5px 15px;
}

.popup-menu .popup-menu-header .header-value {
  font-weight: bold;
}

.popup-menu .menu-list {
  padding: 5px 15px;
  position: relative;
  z-index: 1001;
}

.popup-menu .menu-list .menu-title {
  margin-left: 23px;
}
