.table-list {
  box-sizing: border-box;
  font-size: 14px;
  width: 100%;
  background-color: #fff;
  color: #222;
}

.table-list .table-list-hd, .table-list .table-list-cell {
  display: flex;
  align-items: center;
  padding: 5px 15px;
}

.table-list .table-list-hd-title {
  float: left;
  width: 90px;
  text-align: center;
}

.table-list .table-list-hd-desc {
  flex: 1;
  text-align: center;
}

.table-list .table-list-cell-title {
  float: left;
  width: 90px;
}

.table-list .table-list-cell-desc {
  flex: 1;
}

.table-list .table-list-cell:nth-child(odd) {
  background-color: #f8f8f8;
}
