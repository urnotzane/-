.zc_accordion {
  position: relative;
  background: #fff;
  padding: 20rpx 30rpx;
  max-width: 100%;
  margin: 20rpx;
}

.accordion_cell {
  display: flex;
  align-items: center;
}

.accordion_cell .accordion_avatar {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}

.accordion_avatar .iconfont {
  font-size: 80rpx;
}

.accordion_avatar image {
  max-width: 100%;
  max-height: 100%;
}

.accordion_header {
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
  padding-right: 20rpx;
}

.accordion_header .description {
  line-height: 48rpx;
  font-size: 24rpx;
  color: #aaa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.accordion_cell .icon-right {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #ccc;
}
.zc_accordion .accordion_main{
  margin-top: 20rpx;
}
