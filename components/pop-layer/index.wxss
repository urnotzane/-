
.pop-layer .container{
  position: absolute;
  z-index: 2;
  background: rgba(0,0,0,.5);
  color: #fff;
  font-size:14px;
  padding:5px 15px;
}

.pop-layer .container:after{
  content: "";
  position: absolute;
  width:0;
  height:0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-bottom: 8px solid rgba(0,0,0,.5);
  left: 50%;
  top: -8px;
  margin-left: -3px;
}
