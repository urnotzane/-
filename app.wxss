@import 'styles/iconfont.wxss';

page {
  margin: 0;
  padding: 0;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  overflow: hidden;
}

.zicon_next {
  font-size: 24rpx;
  color: #aaa;
  margin-left: 30rpx;
}

.white_color {
  color: #fff;
}

.black_color {
  color: #333;
}

.shadow_blur {
  position: relative;
}

.shadow_blur::before {
  content: "";
  display: block;
  background: inherit;
  filter: blur(10rpx);
  position: absolute;
  width: 100%;
  height: 100%;
  top: 10rpx;
  left: 10rpx;
  z-index: 0;
  opacity: 0.4;
  transform-origin: 0 0;
  border-radius: inherit;
  transform: scale(1, 1);
}
